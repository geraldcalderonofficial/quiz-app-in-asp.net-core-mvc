@model QuizApp.Models.ViewModels.QuizViewModel

@if (Model.Questions.Any())
{
    <div class="w-50 p-3 container">
        <h1>Quiz Application - ASP.NET Core MVC </h1>
    <div class="main">

        <form asp-controller="Quiz" asp-action="Submit" method="post">
            <div class="mt-4">
                <h2>Guess the questions - (@Model.Questions.Count questions)</h2>

                <div class="mt-4">
                    @for (int i = 0; i < Model.Questions.Count; i++)
                    {
                        <h4>@Model.Questions[i].Text</h4>
                        <div>
                            @foreach (var option in Model.Questions[i].Options)
                            {
                                <p>
                                    <label>
                                        <input required
                                               type="radio"
                                               value="@option.Value"
                                               name="userAnswers[@i]" />
                                        @option.Text
                                    </label>
                                </p>
                            }
                        </div>
                    }
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    </div>
}